<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_scelta"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiallap"
    tools:context="it.unica.ium.pizzalove.Scelta"
    android:padding="10dp"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#00ffffff"
        >

        <ImageView
            android:id="@+id/imgPizzeria"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_margin="10dp"
           />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:orientation="vertical">

        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnCrea"
            android:text="crea la tua pizza"
            android:layout_gravity="center_horizontal"
            android:allowUndo="false"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"/>



        <Button
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnElenco"
            android:contentDescription="il nostro menu"
            android:text="il nostro menu"
            android:layout_gravity="center_horizontal"
            android:textSize="30sp"
            android:layout_margin="5dp"
            android:background="@drawable/button_shape"/>


</LinearLayout>



</LinearLayout>
