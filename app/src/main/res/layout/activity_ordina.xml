<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiallap"
    android:padding="10dp"
    android:orientation="vertical">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_marginBottom="10dp">

       <ImageView
           android:id="@+id/resumePizzeria"
           android:layout_height="fill_parent"
           android:layout_width="fill_parent"
           android:layout_margin="10dp"
           android:contentDescription="@string/lblListHCarrelloNome"/>
   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_material_light_1"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consegna"
            android:textSize="18sp"/>
        <ImageView
            android:contentDescription="@string/lblListHCarrelloNome"
            android:layout_marginLeft="20dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_gravity="center"
            android:visibility="visible" />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/edtNome" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_material_light_1"
        android:padding="5dp">
        <ImageView
            android:contentDescription="@string/lblListHCarrelloNome"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_mode_edit_black_24dp"
            android:layout_gravity="center"
            android:visibility="visible"
            android:layout_marginRight="5dp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:background="@color/background_material_light_1"
            android:id="@+id/edtIndirizzo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/note_final"
        android:orientation="vertical">
        <ScrollView
            android:paddingTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="140dp">
            <LinearLayout
                android:id="@+id/lblListOrdina"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/btnClassica">

        <Button
            android:layout_weight="1"
            android:id="@+id/btnAnnulla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="@string/annulla"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_shape" />

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:visibility="visible"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_shape" />
    </LinearLayout>
</LinearLayout>