<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"

    tools:context="it.unica.ium.pizzalove.CreaPizza">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        >

        <ImageView
            android:id="@+id/imageMain"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:src="@drawable/layers"

            android:contentDescription="imageMain" />





    </LinearLayout>

    <HorizontalScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none"
        android:visibility="visible"
        android:layout_weight="2">


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
          >


            <ImageView

                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/sugo"
                android:src="@drawable/sugo"
                android:contentDescription="@string/image0" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/mozzarella"
                android:src="@drawable/mozzarella"
                android:contentDescription="@string/image1" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/basilico"
                android:src="@drawable/basilico"
                android:contentDescription="@string/image2" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/funghi"
                android:src="@drawable/funghi"
                android:contentDescription="@string/image3" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/salmone"
                android:src="@drawable/salmone"
                android:contentDescription="@string/image4" />

        </LinearLayout>
    </HorizontalScrollView>
    <Button
        android:layout_weight="2.2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/btnAddPizzaCreate"
        android:text="@string/btnAddPizzaCreate" />

</LinearLayout>