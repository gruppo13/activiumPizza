<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="it.unica.ium.pizzalove.Main"
    android:background="@drawable/tiallap">

    <it.unica.ium.pizzalove.DelayAutoCompleteTextView
        android:id="@+id/geo_autocomplete"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:imeOptions="flagNoExtractUi|actionSearch"
        android:inputType="textCapSentences"
        android:hint="Inserisci il tuo indirizzo"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:paddingLeft="50dp"
        android:background="@color/background_material_light_1"
        android:dropDownWidth="fill_parent"
        />
    <ImageView
        android:id="@+id/geo_autocomplete_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_black_24dp"
        android:contentDescription="@string/map_list_header_txt"
        android:layout_gravity="center_horizontal|end"
        android:visibility="visible"
        android:padding="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        />

    <ImageView
        android:id="@+id/geo_autocomplete_clear"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/background_material_light_1"
        android:src="@drawable/ic_clear_black_24dp"
        android:contentDescription="@string/map_list_header_txt"
        android:layout_gravity="center_horizontal|end"
        android:visibility="gone"
        android:layout_marginTop="4dp"
        android:layout_marginRight="4dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentBottom="false"
        android:layout_alignParentRight="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="70dp"
        android:clickable="false"

        >
        <LinearLayout
            android:id="@+id/container"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <Button
                android:id="@+id/bottonePizzeria5"
                android:layout_width="240dp"
                android:layout_gravity="center"
                android:layout_height="240dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:background="@drawable/pizzeria5"/>
            <Button
                android:id="@+id/bottonePizzeria2"
                android:layout_width="240dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:layout_height="240dp"
                android:visibility="gone"
                android:background="@drawable/pizzeria2"/>
            <Button
                android:id="@+id/bottonePizzeria3"
                android:layout_width="240dp"
                android:layout_gravity="center"
                android:layout_height="240dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:background="@drawable/pizzeria3"/>
            <Button
                android:id="@+id/bottonePizzeria4"
                android:layout_width="240dp"
                android:layout_gravity="center"
                android:layout_height="240dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:background="@drawable/pizzeria4"/>
            <Button
                android:id="@+id/bottonePizzeria1"
                android:layout_width="240dp"
                android:layout_gravity="center"
                android:layout_height="240dp"
                android:visibility="gone"
                android:layout_margin="10dp"
                android:background="@drawable/pizzeria1"/>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
