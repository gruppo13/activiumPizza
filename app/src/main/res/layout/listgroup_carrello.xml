<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:padding="8dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_weight="1.5"
        android:background="@drawable/ic_clear_black_24dp"
        android:id="@+id/lblListHCarrelloRemove" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:gravity="right"
        android:layout_weight="1.5"
        android:background="@drawable/tools"
        android:id="@+id/lblListHCarrelloModifica" />

    <TextView
        android:id="@+id/lblListHCarrelloNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:textSize="17sp"
        android:gravity="left"
        android:text="@string/lblListHCarrelloNum" />

    <TextView
        android:id="@+id/lblListHCarrelloNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:textSize="17sp"
        android:gravity="left"
        android:text="@string/lblListHCarrelloNome" />


    <TextView
        android:id="@+id/lblListHCarrelloPrezzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:text="@string/lblListHCarrelloPrezzo"
        android:layout_weight="1.3"/>

    <TextView

        android:id="@+id/lblListHCarrelloPrezzoTotale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:text="@string/lblListHCarrelloTotale"
        android:layout_weight="1.2"/>


</LinearLayout>