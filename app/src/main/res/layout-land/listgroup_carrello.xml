<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_weight="1"
    android:padding="8dp"
   >

    <Button
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:background="@drawable/ics_rossa"
        android:id="@+id/lblListHCarrelloRemove"
        android:focusable="false"/>

    <Button
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:focusable="false"
        android:layout_marginLeft="5pt"
        android:background="@drawable/modifica"
        android:id="@+id/lblListHCarrelloModifica" />

    <Button
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:focusable="false"
        android:layout_marginLeft="5pt"
        android:background="@drawable/piu"
        android:id="@+id/lblListHCarrelloAdd" />

    <TextView
        android:id="@+id/lblListHCarrelloNum"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="17sp"

        android:text="@string/lblListHCarrelloNum" />

    <TextView
        android:id="@+id/lblListHCarrelloNome"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="left"
        android:text="@string/lblListHCarrelloNome" />


    <TextView
        android:id="@+id/lblListHCarrelloPrezzo"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:text="@string/lblListHCarrelloPrezzo"
        android:layout_weight="1.3"/>

    <TextView

        android:id="@+id/lblListHCarrelloPrezzoTotale"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:gravity="center"
        android:text="@string/lblListHCarrelloTotale"
        android:layout_weight="1.2"/>


</LinearLayout>