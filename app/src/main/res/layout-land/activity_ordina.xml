<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiallac"
    android:padding="10dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

            <ImageView
                android:contentDescription="@string/lblListHCarrelloNome"
                android:layout_width="match_parent"
                android:id="@+id/resumePizzeria"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background_material_light_1"
                android:padding="5dp">

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/consegna"
                android:textSize="18sp"/>
                <ImageView
                    android:contentDescription="@string/lblListHCarrelloNome"
                    android:layout_marginLeft="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_mode_edit_black_24dp"
                    android:layout_gravity="center"
                    android:visibility="visible" />
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:id="@+id/edtNome" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_material_light_1"
            android:padding="5dp">
            <ImageView
                android:contentDescription="@string/lblListHCarrelloNome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginRight="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:background="@color/background_material_light_1"
                android:id="@+id/edtIndirizzo" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:id="@+id/btnAnnulla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/annulla"
                android:visibility="visible"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_shape" />
            <Button
                android:layout_weight="1"
                android:id="@+id/btnPaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_shape" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:clickable="false"
                android:paddingTop="60dp"
                android:paddingLeft="10dp"
                android:paddingBottom="50dp">
                <LinearLayout
                    android:id="@+id/lblListOrdina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
                <TextView
                    android:id="@+id/tot0"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:paddingLeft="40dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/resumeTotale"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:paddingBottom="10dp" />
    </LinearLayout>

</LinearLayout>
 </LinearLayout>