<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiallap"
    android:padding="10dp"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"

        android:layout_marginBottom="10dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consegna in "
            android:textSize="18dp"
            android:background="@color/background_material_light_1"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:background="@color/background_material_light_1"
            android:id="@+id/edtIndirizzo"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/note_final"
        android:orientation="vertical"
        >
        <ListView
            android:paddingTop="22dp"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/lblListOrdina">


        </ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="90dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="26dp"
                android:layout_marginRight="20dp"
                android:text="Totale:"
                android:layout_gravity="center"/>
            <TextView
                android:textSize="26dp"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:text="10.30$" />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        android:id="@+id/btnClassica"
        >


        <Button
            android:layout_weight="1"
            android:id="@+id/btnAnnulla"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Annulla"
            android:editable="false"
            android:visibility="visible"
            android:layout_marginRight="5dp"
            android:background="@drawable/button_shape"
            />

        <Button
            android:layout_weight="1"
            android:id="@+id/btnPaga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:text="Paga"
            android:visibility="visible"
            android:layout_marginLeft="5dp"
            android:background="@drawable/button_shape"
            />

    </LinearLayout>



</LinearLayout>