<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiallac"
    android:padding="10dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        >

            <ImageView

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/tarcisio"
                android:layout_marginBottom="15dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background_material_light_1"
                android:padding="5dp"
                >
                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Consegna a "
                android:textSize="18dp"/>
                <ImageView
                    android:layout_marginLeft="20dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/pen_icon"

                    android:layout_gravity="center"
                    android:visibility="visible"

                    />


                <EditText

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="Annis"

                    android:id="@+id/edtNome"
                    />

            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_material_light_1"
            android:padding="5dp"
            >
            <ImageView

                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/pen_icon"

                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginRight="5dp"
                />
        <EditText

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="via merello 21, 09821 Cagliari"
                android:background="@color/background_material_light_1"
                android:id="@+id/edtIndirizzo"
                />
    </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            >


            <Button
                android:layout_weight="1"
                android:id="@+id/btnAnnulla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Annulla"
                android:editable="false"
                android:visibility="visible"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_shape"
                />

            <Button
                android:layout_weight="1"
                android:id="@+id/btnPaga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17dp"
                android:text="Paga"
                android:visibility="visible"
                android:layout_marginLeft="5dp"
                android:background="@drawable/button_shape"
                />

        </LinearLayout>
    </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:clickable="false"
                android:paddingTop="60dp"
                android:paddingLeft="10dp"
                android:paddingBottom="50dp">

                <LinearLayout
                    android:id="@+id/container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
            <TextView
                android:id="@+id/tot0"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Totale:"
                android:textStyle="bold"
                android:textAlignment="center"
                android:paddingLeft="40dp"
                />
            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="3.14 $"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:paddingBottom="10dp" />
</LinearLayout>








</LinearLayout>
 </LinearLayout>











</LinearLayout>