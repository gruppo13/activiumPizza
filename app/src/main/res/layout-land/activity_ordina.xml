<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tiallac"
    android:padding="10dp"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="285dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp">

            <ImageView
                android:contentDescription="@string/lblListHCarrelloNome"
                android:layout_width="match_parent"
                android:id="@+id/resumePizzeria"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="5dp"
            android:background="@color/background_material_light_1">
            <ImageView
                android:contentDescription="@string/lblListHCarrelloNome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginRight="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:lines="1"
                android:id="@+id/edtNome"
                android:hint="Scrivi il tuo nome"
                android:background="@color/background_material_light_1"
                android:maxLines="1"
                android:singleLine="true"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/background_material_light_1"
            android:padding="5dp">
            <ImageView
                android:contentDescription="@string/lblListHCarrelloNome"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_mode_edit_black_24dp"
                android:layout_gravity="center"
                android:visibility="visible"
                android:layout_marginRight="5dp" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:background="@color/background_material_light_1"
                android:id="@+id/edtIndirizzo"
                android:hint="Inserisci il tuo indirizzo"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnAnnulla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:text="@string/annulla"
                android:visibility="visible"
                android:layout_marginRight="5dp"
                android:background="@drawable/button_shape" />
        </LinearLayout>
    </LinearLayout>
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:clickable="false"
                android:paddingTop="60dp"
                android:paddingLeft="10dp">
                <LinearLayout
                    android:id="@+id/lblListOrdina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:orientation="vertical">
                </LinearLayout>
            </ScrollView>
            <Button
                android:id="@+id/btnPaga"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:textSize="30sp"
                android:visibility="visible"
                android:layout_marginRight="3dp"
                android:layout_gravity="right"
                android:background="@drawable/button_shape" />
    </LinearLayout>
</LinearLayout>