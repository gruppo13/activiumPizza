<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_creapizza"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/tialla"
    tools:context="it.unica.ium.pizzalove.CreaPizza"
    android:baselineAligned="false"
    android:padding="0dp">

    <ScrollView
        android:layout_width="80dp"
        android:layout_height="fill_parent"
        android:scrollbars="none"
        android:visibility="visible"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="5dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:focusableInTouchMode="false">


            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/sugo"
                android:src="@drawable/icon_sugo"
                android:contentDescription="@string/image0" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/mozzarella"
                android:src="@drawable/icon_mozzarella"
                android:contentDescription="@string/image1" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/capperi"
                android:src="@drawable/icon_capperi"
                android:contentDescription="@string/image18" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:id="@+id/acciughe"
                android:src="@drawable/icon_acciughe"
                android:contentDescription="@string/image19" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/basilico"
                android:src="@drawable/icon_basilico"
                android:contentDescription="@string/image21" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/wurstel"
                android:src="@drawable/icon_wurstel"
                android:contentDescription="@string/image16" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/cipolle"
                android:src="@drawable/icon_cipolle"
                android:contentDescription="@string/image4" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/bacon"
                android:src="@drawable/icon_bacon"
                android:contentDescription="@string/image2" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/uova"
                android:src="@drawable/icon_uova"
                android:contentDescription="@string/image15" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:id="@+id/zucchine"
                android:src="@drawable/icon_zucchine"
                android:contentDescription="@string/image17" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingTop="5dp"
                android:id="@+id/melanzane"
                android:src="@drawable/icon_melanzane"
                android:contentDescription="@string/image8" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/pomodori"
                android:src="@drawable/icon_pomodori"
                android:contentDescription="@string/image13" />
            <ImageView

                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/olive"
                android:src="@drawable/icon_olive"
                android:contentDescription="@string/image9" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"

                android:paddingBottom="5dp"
                android:id="@+id/funghi"
                android:src="@drawable/icon_funghi"
                android:contentDescription="@string/image6" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/cotto"
                android:src="@drawable/icon_cotto"
                android:contentDescription="@string/image20" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/patatine"
                android:src="@drawable/icon_patatine"
                android:contentDescription="@string/image10" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/salame"
                android:src="@drawable/icon_salame"
                android:contentDescription="@string/image14" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/peperoni"
                android:src="@drawable/icon_peperoni"
                android:contentDescription="@string/image12" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/broccoli"
                android:src="@drawable/icon_broccoli"
                android:contentDescription="@string/image3" />
            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/gamberetti"
                android:src="@drawable/icon_gamberetti"
                android:contentDescription="@string/image7" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/formaggio"
                android:src="@drawable/icon_formaggio"
                android:contentDescription="@string/image5" />

            <ImageView
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="65dp"
                android:paddingBottom="5dp"
                android:id="@+id/peperoncini"
                android:src="@drawable/icon_peperoncini"
                android:contentDescription="@string/image11" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageMain"
            android:layout_height="230dp"
            android:layout_width="fill_parent"
            android:src="@drawable/pastapizza"
            android:contentDescription="@string/imageMain" />

        <Button
            android:layout_height="57dp"
            android:layout_width="fill_parent"
            android:id="@+id/btnAddPizzaCreate"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:text="@string/btnAddPizzaCreate"
            android:layout_gravity="bottom"
            android:background="@drawable/button_shape"/>
    </LinearLayout>

    <android.support.design.widget.CoordinatorLayout

        android:orientation="vertical"
        android:layout_width="220dp"
        android:layout_height="315dp"
        android:padding="5dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:paddingTop="60dp"
            android:paddingLeft="18dp"
            android:paddingBottom = "86dp">
            <LinearLayout
                android:id="@+id/container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:animateLayoutChanges="true"
                android:orientation="vertical">
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|center">
            <TextView
                android:id="@+id/tot0"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="Totale"
                android:layout_gravity="bottom|right"
                android:textStyle="bold"
                android:paddingBottom="60dp"
                />
            <TextView
                android:id="@+id/tot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="3.14 $"
                android:layout_gravity="bottom|center"
                android:textStyle="bold"
                android:paddingBottom="35dp" />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:src="@drawable/ic_add_white_24dp"
            app:fabSize="normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="#178F0A"
            android:layout_gravity="bottom|right|end"
            android:id="@+id/addPizza" />
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>